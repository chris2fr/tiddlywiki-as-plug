title: $:/plugins/chris2fr/asplugout/config
type: text/vnd.tiddlywiki

\define renderSaveBundleButton( targetBundleName )
<$button>
Save bundle as
<$action-sendmessage $message="tm-new-tiddler" title="$:/config/chris2fr/asplugout/bundles/$(targetBundleName)$" tags="" text="This is the $(targetBundleName)$ bundle." wikishortname={{$:/config/chris2fr/asplugout/WikiShortName}} wikinaturalname={{$:/config/chris2fr/asplugout/WikiNaturalName}} authorshortname={{$:/config/chris2fr/asplugout/AuthorShortName}} authornaturalname={{$:/config/chris2fr/asplugout/AuthorNaturalName}}
filter={{$:/config/chris2fr/asplugout/Filter}}
savename="""$(targetBundleName)$"""
text={{$:/config/chris2fr/asplugout/ReadMe}}/>
</$button>
\end
\define renderCheckShortName( targetTiddler shortName )
<$action-setfield $tiddler="""$targetTiddler$""" $value=<<checkShortName shortName:"""$shortName$""" >>/>
\end
\define renderCheckNaturalName( targetTiddler naturalName )
<$action-setfield $tiddler="""$targetTiddler$""" $value=<<checkNaturalName naturalName:"""$naturalName$""" >>/>
\end
\define setDefaults( siteTitle userName siteSubTitle)
<$action-setfield $tiddler="""$:/config/chris2fr/asplugout/WikiShortName""" text=<<checkShortName shortName:$siteTitle$>>/>
<$action-setfield $tiddler="""$:/config/chris2fr/asplugout/AuthorShortName""" text=<<checkShortName shortName:"""$(userName)$""">>/>
<$action-setfield $tiddler="""$:/config/chris2fr/asplugout/WikiNaturalName""" text=<<checkNaturalName naturalName:"""$(siteTitle)$""">>/>
<$action-setfield $tiddler="""$:/config/chris2fr/asplugout/AuthorNaturalName""" text=<<checkNaturalName naturalName:"""$(userName)$""">>/>
<$action-setfield $tiddler="""$:/config/chris2fr/asplugout/Filter""" text="[all[tiddlers]]"/>
<$action-setfield $tiddler="""$:/config/chris2fr/asplugout/ReadMe""" text=<<siteSubTitle>>/>
<$action-setfield $tiddler="""$:/temp/chris2fr/asplugout/targetBundleName""" text="Default"/>
\end

