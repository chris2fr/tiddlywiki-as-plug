\define renderSaveBundleButton( targetBundleName )
<$button>
Save bundle as
<$action-sendmessage $message="tm-new-tiddler" title="$/config/chris2fr/asplugout/bundles/$(targetBundleName)$" tags="" text="This is the $(targetBundleName)$ bundle." WikiShortName={{$:/config/chris2fr/asplugout/WikiShortName}}/>
<$action-setfield text={{$:/config/chris2fr/asplugout/WikiShortName}} $tiddler="""$/config/chris2fr/asplugout/bundles/$(targetBundleName)$!!WikiShortName"""/>
<$action-setfield text={{$:/config/chris2fr/asplugout/WikiNaturalName}} $tiddler="""$/config/chris2fr/asplugout/bundles/$(targetBundleName)$!!WikiNaturalName"""/>
<$action-setfield text={{$:/config/chris2fr/asplugout/AuthorShortName}} $tiddler="""$/config/chris2fr/asplugout/bundles/$(targetBundleName)$!!AuthorShortName"""/>
<$action-setfield text={{$:/config/chris2fr/asplugout/AuthorNaturalName}} $tiddler="""$/config/chris2fr/asplugout/bundles/$(targetBundleName)$!!AuthorNaturalName"""/>
</$button>
\end
\define renderCheckShortName( targetTiddler shortName )
<$action-setfield $tiddler="""$targetTiddler$""" $value=<<checkShortName shortName:"""$shortName$""" >>/>
\end
\define renderCheckNaturalName( targetTiddler naturalName )
<$action-setfield $tiddler="""$targetTiddler$""" $value=<<checkNaturalName naturalName:"""$naturalName$""" >>/>
\end

