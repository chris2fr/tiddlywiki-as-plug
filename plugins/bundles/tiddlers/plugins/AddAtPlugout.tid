<$button>
+@
<$action-sendmessage $message="tm-close-other-tiddlers"/>
<$action-navigate $to="$whichTiddler$@$whichWiki$"/>
</$button>
</$list>
\end

<$macrocall $name="addAtPlugout" whichTiddler={{!!title}} whichWiki={{!!plugout}}/>
